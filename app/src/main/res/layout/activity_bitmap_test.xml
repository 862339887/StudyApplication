<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BitmapTestCompressActivity">

    <ImageView
        android:id="@+id/rgb_8888_bitmap"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/test1_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rgb_8888_bitmap_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgb_8888_bitmap"
        android:text="rgb_8888_bitmap"
        android:gravity="center"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/rgb_565_bitmap"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/test1_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rgb_565_bitmap_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgb_565_bitmap"
        android:text="rgb_565_bitmap"
        android:gravity="center"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/test_bitmap_btn_8888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="load_bitmap_8888"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/test_bitmap_btn_565"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="load_bitmap_565"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_bitmap_btn_8888"
        />



</androidx.constraintlayout.widget.ConstraintLayout>