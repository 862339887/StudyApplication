<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/gray"
    tools:context=".activity.SpanTestActivity">

    <TextView
        android:id="@+id/test_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/test_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        android:ellipsize="end"

        tools:text="fdafdafdafdafdafffffffffffffffffffffffffffffffffffffffffffffffffffffffffdafdafdafffffffdafdafdafdafdafdafdafdafdafafdafdafffffffffffwqqqqqawwwwwwwwwwfffffff"
        />

    <ImageView
        android:id="@+id/test_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/test1_icon"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/test_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>