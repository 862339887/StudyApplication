            android:background="@color/blue_dark" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/blue_dark" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/blue_dark" />

    </LinearLayout>

</LinearLayout>